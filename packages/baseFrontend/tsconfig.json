{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "charset": "utf8",
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    
    /* build */
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    
    /* built in, module resolution */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "@types/modules",
      "node_modules/@types"
    ],
    
    /* options */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "preserve",
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react"
  },
  
  /* compile target */
  "include": [
    "@types/common/**/*",
    "src/**/*"
  ],
  "exclude": [
    "build/**/*",
    "node_modules/**/*"
  ]
}
